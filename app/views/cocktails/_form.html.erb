<div class="container">
  <div class="col-md-6 mx-auto">
    <div class="card w-30 p-3 mt-5">
      <%= simple_form_for @cocktail.filter do |f| %>
        <%= f.input :value %>
        <%= f.button :submit, class: "btn btn-primary";%>
      <% end %>
      <h2 class="text-center">Create a cocktail</h2>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.button :submit, class: "btn btn-primary";%>
      <% end %>
    </div>
  </div>
</div>


