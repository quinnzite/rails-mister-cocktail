<% if @cocktails.empty? %>
  <div class="container">
    <div class="col-md-6 mx-auto">
      <div class="card w-30 p-3 mt-5 text-center">
        <h2 class="pb-3">No matches for your search</h2>
        <%= link_to "Return to all Cocktails",  cocktails_path, class: "btn btn-primary"; %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="search-form">
    </div>
    <div class="cards my-5">
      <% @cocktails.each do |c| %>
        <% if !c.photo.blank? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path c.photo %>)">
           <%= link_to c.name, cocktail_path(c) %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= c.image_url %>)">
           <%= link_to c.name, cocktail_path(c) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

